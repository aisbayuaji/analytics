
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Tambah Data</h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="./">Home</a></li>
      <li class="breadcrumb-item">Menu</li>
      <li class="breadcrumb-item active" aria-current="page">Tambah Data</li>
    </ol>
</div>
<div class="alert alert-primary" role="alert">
    Download template untuk upload laporan <a href="/download-excel" class="alert-link">Download disini</a>. Harap sesuaikan dengan template laporan.
  </div>
  
<div class="card mb-4">

<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Daftar Upload</h6>
          <div class="position-relative">
            <div class="d-grid top-0 end-0">
                <button class="btn btn-primary" type="button" onclick="uploadData()">Uplod Data</button>
            </div>
        </div>
</div>

<div class="table-responsive p-3">
          <table class="table align-items-center table-flush table-hover" id="dataTableHover">
            <thead class="thead-light">
                <th>TGL Report</th>
                <th>Kategori</th>
                <th>Keterangan</th>
                <th>Posisi</th>
                <th>RKA</th>
                <th>Pencapaian</th>
            </thead>
            <tbody>
              <% results.forEach((item) => {
                function formatDate(dateString) {
                  const date = new Date(dateString);
                  const year = date.getFullYear();
                  const month = ('0' + (date.getMonth() + 1)).slice(-2);
                  const day = ('0' + date.getDate()).slice(-2);
                  const hours = ('0' + date.getHours()).slice(-2);
                  const minutes = ('0' + date.getMinutes()).slice(-2);
                  const seconds = ('0' + date.getSeconds()).slice(-2);

                  return `${day}-${month}-${year}`;
                } 
                %>
                <tr>
                  <td><%= formatDate(item.tanggal_report) %></td>
                  <td><%= item.kategori %></td>
                  <td><%= item.keterangan %></td>
                  <td><%= item.posisi %></td>
                  <td><%= item.rka %></td>
                  <td><%= item.pencapaian %></td>
                </tr>
              <% }); %>
              
            </tbody>
          </table>

</div>
